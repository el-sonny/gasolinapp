  <div class='toggle-sidebar' ng-click = "toggleSidebar = !toggleSidebar"></div>
  <div class="navbar-header">
    <a class="navbar-brand" href="/#!"><img class='logo' src='/images/gasolinapp.png' /></a>
  </div>
  <form class="navbar-form navbar-right" role="form">
    <select ng-model="selectedEntidad" ng-change="get_gasolineras(true)" data-placeholder="Estados" class='entidadSelect'>
      <option value=""></option>
      <option ng-repeat='entidad in entidades' ng-value="entidad.nombre">{{entidad.nombre}}</option>
    </select>

    <select 
      ng-model="selectedMunicipio" 
      ng-change="get_gasolineras()" 
      data-placeholder="Municipios" 
      class='entidadSelect selectpicker' 
      ng-options='m as m.nombre for m in filteredMunicipios = (municipios | filter:munFilter())'
    >
      <option value=''>Municipio</option>
    </select>

  </form>
  <p class="my-position"><a href="" ng-click="getGeoLocalization()"><img src="/images/Flecha-Blan.png" alt="Mi posicion"></a> <a href="" ng-click="getGeoLocalization()">Usar mi ubicaci√≥n actual</a></p>
  <div class="clear"></div>
  <%- partial('jumbotron') -%>
  <div class="arrow-box"><div ng-show="!toggleJumbotron" class="arrow arrow-head" ng-click="toggleJumbotron = !toggleJumbotron"></div> </div>
</div>